[user]
	name = Keith Salisbury
	email = keith.salisbury@alliants.com
[color]
  ui = true
[core]
  editor = vim
	excludesfile = ~/.gitignore_global
[push]
	default = current
[alias]
	co = checkout
  cp = cherry-pick
	br = branch
	ci = commit
  s  = status
	st = status
  a  = add -p
  i  = add -i
  g  = grep --break --heading --line-number
  d  = diff
  l  = log
  ll = log -p
  lt = log trunk
  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format='%(refname:short)'
[commit]
  template = ~/.commitmessage
[grep]
	extendRegexp = true
	lineNumber = true
